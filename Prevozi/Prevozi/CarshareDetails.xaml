<Page
    x:Class="Prevozi.CarshareDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Prevozi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
    <CommandBar x:Name="SecondaryTileCommandBar" IsSticky="True" IsOpen="False">
        <AppBarButton x:Name="PinUnPinCommandButton" Icon="Pin" Label="Pin" Click="PinUnPinCommandButton_Click" />
        <AppBarButton x:Name="CopyPhoneNumber" Icon="Contact" Label="Phone number" Click="CopyPhoneNumber_Click" />
    </CommandBar>
    </Page.BottomAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <TextBlock x:Name="tblDetails" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29">Več o prevozu:</TextBlock>
        <TextBlock x:Name="tblDetailsPrevoz" Margin="10,44,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29"></TextBlock>
        <ListView x:Name="lvCarshareDetails" HorizontalAlignment="Left" Height="469" Margin="10,86,0,0" VerticalAlignment="Top" Width="340"/>

    </Grid>
</Page>
